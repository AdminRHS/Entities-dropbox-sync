  "risk_assessment": {
    "high_risks": [
      {
        "risk": "Airscale directory unlock fails or provides incomplete data",
        "impact": "High",
        "probability": "Low",
        "mitigation": "Validate company exists in Airscale database before purchasing credits. Have backup plan with LinkedIn Sales Navigator (TASK-TEMPLATE-004) for premium alternative."
      },
      {
        "risk": "Multi-contact outreach flagged as spam",
        "impact": "High",
        "probability": "Medium",
        "mitigation": "Space out outreach over 1-2 weeks. Use different email templates per segment. Warm up email domain. Monitor spam scores."
      }
    ],
    "medium_risks": [
      {
        "risk": "Low response rate from enterprise contacts (<3%)",
        "impact": "Medium",
        "probability": "Medium",
        "mitigation": "Heavily personalize by role. Reference company-specific initiatives. Provide high-value content. A/B test messaging."
